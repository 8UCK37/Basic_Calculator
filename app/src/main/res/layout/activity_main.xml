<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/calc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_mode"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/inpfield"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="47dp"
        android:layout_marginTop="86dp"
        android:hint="Enter...."
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/result"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/inpfield"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="47dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/white"
        android:hint="="
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="24dp" />

    <Button
        android:id="@+id/all_clear"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="350dp"
        android:backgroundTint="@color/dark_red"
        android:text="A/C" />
    <Button
        android:id="@+id/firstb"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:layout_toRightOf="@id/all_clear"
        android:backgroundTint="@color/teal_700"
        android:layout_marginStart="10dp"
        android:text="(" />

    <Button
        android:id="@+id/closingb"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="350dp"
        android:layout_toRightOf="@id/firstb"
        android:backgroundTint="@color/teal_700"
        android:text=")" />

    <Button
        android:id="@+id/button7"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="400dp"
        android:backgroundTint="@color/teal_700"
        android:text="7" />

    <Button
        android:id="@+id/button8"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="400dp"
        android:layout_toRightOf="@id/button7"
        android:backgroundTint="@color/teal_700"
        android:text="8" />

    <Button
        android:id="@+id/button9"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="111dp"
        android:layout_marginTop="400dp"
        android:layout_toRightOf="@id/button8"
        android:backgroundTint="@color/teal_700"
        android:text="9" />

    <Button
        android:id="@+id/button4"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/button7"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/teal_700"
        android:text="4" />

    <Button
        android:id="@+id/button5"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/button8"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/button4"
        android:backgroundTint="@color/teal_700"
        android:text="5" />

    <Button
        android:id="@+id/button6"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/button9"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/button5"
        android:backgroundTint="@color/teal_700"
        android:text="6" />

    <Button
        android:id="@+id/button1"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/button4"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/teal_700"
        android:text="1" />

    <Button
        android:id="@+id/button2"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/button5"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/button1"
        android:backgroundTint="@color/teal_700"
        android:text="2" />
    <Button
        android:id="@+id/button3"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_below="@id/button6"
        android:layout_toRightOf="@id/button2"
        android:backgroundTint="@color/teal_700"
        android:text="3" />

    <Button
        android:id="@+id/button0"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/button1"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/teal_700"
        android:text="0" />

    <Button
        android:id="@+id/dot"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/button2"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/button1"
        android:backgroundTint="@color/teal_700"
        android:text="." />

    <Button
        android:id="@+id/backspace"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/button3"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/dot"
        android:backgroundTint="@color/dark_red"
        android:text="\u232b" />

    <Button
        android:id="@+id/multiplication"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="400dp"
        android:layout_toRightOf="@id/button9"
        android:backgroundTint="@color/dark_orange"
        android:text="ร" />

    <Button
        android:id="@+id/division"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="12dp"
        android:layout_toRightOf="@id/multiplication"
        android:backgroundTint="@color/dark_orange"
        android:text="รท" />

    <Button
        android:id="@+id/addition"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/multiplication"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/button6"
        android:backgroundTint="@color/dark_orange"
        android:text="+" />

    <Button
        android:id="@+id/sub"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/division"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="12dp"
        android:layout_toRightOf="@id/addition"
        android:backgroundTint="@color/dark_orange"
        android:text="-" />

    <Button
        android:id="@+id/power"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/addition"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="12dp"
        android:layout_toRightOf="@id/addition"
        android:backgroundTint="@color/dark_orange"
        android:text="^" />

    <Button
        android:id="@+id/ans"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/addition"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/button3"
        android:backgroundTint="@color/dark_blue"
        android:text="ANS" />

    <Button
        android:id="@+id/equals"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ans"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_toRightOf="@id/backspace"
        android:backgroundTint="@color/dark_green"
        android:text="=" />

    <Button
        android:id="@+id/copyToClip"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="350dp"
        android:layout_toRightOf="@id/closingb"
        android:backgroundTint="@color/dark_green"
        android:text="CopyToClip"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

</RelativeLayout>